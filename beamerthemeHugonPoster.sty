\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.24\paperwidth}
        \vskip5ex
          \includegraphics[width=.08\paperwidth]{logos/DOE_Seal}
          \includegraphics[width=.08\paperwidth]{logos/NSF}
          \includegraphics[width=.08\paperwidth]{logos/CMS-Color-Label}
        \vskip2ex
      \end{column}
      %\begin{column}{.6\paperwidth}
      \begin{column}{.45\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge\inserttitle}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\textbf{\Large\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}{\large\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{.3\paperwidth}
        \vskip9ex
        \begin{center}
          \includegraphics[width=.28\paperwidth]{logos/UF_Signature}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

